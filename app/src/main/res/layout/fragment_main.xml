<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/rly_main"
    android:weightSum="1"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature: 0"
            android:id="@+id/tvTemprature" />
    </LinearLayout>




    <WebView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/stream_webview"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></WebView>


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnTalk"
        android:background="@drawable/mic_btn"
        android:layout_below="@+id/stream_webview"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnChart"
        android:background="@drawable/chart"
        android:layout_below="@+id/btnTalk"
        android:layout_toLeftOf="@+id/btnTalk"
        android:layout_toStartOf="@+id/btnTalk" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnSing"
        android:background="@drawable/music_btn"
        android:layout_alignTop="@+id/btnChart"
        android:layout_toRightOf="@+id/btnTalk"
        android:layout_toEndOf="@+id/btnTalk" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnSettings"
        android:background="@drawable/settings_btn"
        android:layout_below="@+id/btnSing"
        android:layout_toLeftOf="@+id/btnSing"
        android:layout_toStartOf="@+id/btnSing" />

</RelativeLayout>

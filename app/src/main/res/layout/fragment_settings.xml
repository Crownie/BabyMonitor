<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="babymonitor.example.com.babymonitor.fragments.SettingsFragment" android:id="@+id/settings_grid"
              android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Too High Temperature"
            android:layout_weight="0.04"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/et_high" android:layout_weight="0.04"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Too Low Temperature"
              android:layout_weight="0.04"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberSigned"
              android:ems="10" android:id="@+id/et_low" android:layout_weight="0.04"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Dangerous Change in Temperature"
              android:layout_weight="0.04"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberSigned"
              android:ems="10" android:id="@+id/et_delta" android:layout_weight="0.04"/>
</LinearLayout>
